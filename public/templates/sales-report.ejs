<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Overview</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Roboto:wght@100;300;400;500;700&display=swap"
    rel="stylesheet">
  <style>
    body {
      padding: 100px;
      border-radius: 5px;
      font-family: 'Roboto', sans-serif;
      color: #36454F;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      padding: 80px;
      margin-bottom: 30px;
    }

    th,
    td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #acd4d133;
    }

    .logo-text {
      color: #000;
      font-size: 25px;
      font-weight: 700;
      letter-spacing: 1.14px;
    }

    .selected-period-text {
      font-weight: 400;
      font-size: 22px;
      margin-top: -10px;
    }

    .selected-period-date {
      color: #088178;
    }

    .main-heading {
      color: #414A4C;
      font-size: 28px;
      text-align: center;
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    .copyright-text {
      text-align: center;
      font-size: 14px;
      font-family: sans-serif;
    }
  </style>
</head>

<body>

  <p class="main-heading">Sales Report</p>
  <div class="container mt-5">
    <div class="header text-center mb-5">
      <p class="logo-text"><span style="color: #088178;">Shoe</span>Cart</p>
      <h2 class="selected-period-text">Selected Period Sales Report: <span class="selected-period-date">
          <%= doc.date.replace(/(\d{2}-\d{2}-\d{4})-(\d{2}-\d{2}-\d{4})/, "$1 to $2" ) %>
        </span>
      </h2>
    </div>

    <!-- Overall sales summary table -->
    <h3>Overall Order Summary</h3>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Total Orders</th>
          <th>Processing Orders</th>
          <th>Shipped Orders</th>
          <th>Delivered Orders</th>
          <th>Cancelled Orders</th>
          <th>Returned Orders</th>
          <th>Total Sales</th>
          <th>Total Revenue</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= doc.date.replace(/(\d{2}-\d{2}-\d{4})-(\d{2}-\d{2}-\d{4})/, "$1 to $2" ) %>
          </td>
          <td>
            <%= doc.totalOrders %>
          </td>
          <td>
            <%= doc.totalProcessingOrders %>
          </td>
          <td>
            <%= doc.totalShippedOrders %>
          </td>
          <td>
            <%= doc.totalDeliveredOrders %>
          </td>
          <td>
            <%= doc.totalCancelledOrders %>
          </td>
          <td>
            <%= doc.totalReturnedOrders %>
          </td>
          <td>
            ₹<%= doc.totalSales.toFixed(2) %>
          </td>
          <td>
            ₹<%= doc.totalRevenue.toFixed(2) %>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Product details table -->
    <h3>Product Details</h3>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Units Sold</th>
          <th>Cancelled Products</th>
          <th>Returned Products</th>
          <th>Total Sales Amount</th>
        </tr>
      </thead>
      <tbody>
        <% doc.products.forEach((product)=> { %>
          <tr>
            <td>
              <%= product.name %>
            </td>
            <td>
              <%= product.unitsSold %>
            </td>
            <td>
              <%= product.cancelledCount %>
            </td>
            <td>
              <%= product.returnedCount %>
            </td>
            <td>
              ₹<%= product.totalSalesAmount %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>

    <!-- Category details table -->
    <h3>Category Details</h3>
    <table>
      <thead>
        <tr>
          <th>Category Name</th>
          <th>Units Sold</th>
          <th>Cancelled Products</th>
          <th>Returned Products</th>
          <th>Total Sales Amount</th>
        </tr>
      </thead>
      <tbody>
        <% doc.categories.forEach((category)=> { %>
          <tr>
            <td>
              <%= category.name %>
            </td>
            <td>
              <%= category.unitsSold %>
            </td>
            <td>
              <%= category.cancelledCount %>
            </td>
            <td>
              <%= category.returnedCount %>
            </td>
            <td>
              ₹<%= category.totalSalesAmount %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>

    <!-- Brand details table -->
    <h3>Brand Details</h3>
    <table>
      <thead>
        <tr>
          <th>Brand Name</th>
          <th>Units Sold</th>
          <th>Cancelled Products</th>
          <th>Returned Products</th>
          <th>Total Sales Amount</th>
        </tr>
      </thead>
      <tbody>
        <% doc.brands.forEach((brand)=> { %>
          <tr>
            <td>
              <%= brand.name %>
            </td>
            <td>
              <%= brand.unitsSold %>
            </td>
            <td>
              <%= brand.cancelledCount %>
            </td>
            <td>
              <%= brand.returnedCount %>
            </td>
            <td>
              ₹<%= brand.totalSalesAmount %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>

    <p class="copyright-text">&copy; ShoeCart Ltd.</p>

</body>

</html>