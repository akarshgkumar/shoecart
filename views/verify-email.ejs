<%- include('header') %>
  <% if (typeof error !=='undefined' ) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% } %>
      <div class="limiter">
        <div class="container-login100">
          <div class="wrap-login100">
            <div class="login100-pic">
              <img class="otp-shoe-img" src="static/images/login-shoe.png" alt="IMG">
            </div>

            <form action="/verify-email" class="login100-form email-login-form" method="post">
              <span class="login100-form-title login-text">
                OTP Login
              </span>

              <div class="wrap-input100">
                <input class="input100" id="otp-email-input" type="text" name="email" placeholder="Enter Email">
                <span class="error-span">&nbsp;</span>
                <span class="symbol-input100">
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
              </div>
             
              <div class="container-login100-form-btn">
                <button class="login100-form-btn otp-login-btn">
                  Submit Email
                </button>
              </div>

              <div class="text-center login-another-page-link">
                <a class="txt2" href="/login">
                  Back to login
                  <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
      <%- include('footer') %>