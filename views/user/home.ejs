            <li class="nav-item" role="presentation">
              <button class="nav-link" id="nav-tab-three" data-bs-toggle="tab" data-bs-target="#tab-three" type="button"
                role="tab" aria-controls="tab-three" aria-selected="false">New Added</button>
            </li>
          </ul>
          <a href="/product/view-full-products" class="view-more d-none d-md-flex">View More<i
              class="fi-rs-angle-double-small-right"></i></a>
        </div>
        <!--End nav-tabs-->
        <div class="tab-content wow fadeIn animated" id="myTabContent">
          <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
            <div class="row product-grid-4">
              <% randomProducts.forEach(product=> { %>
                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                  <div class="product-cart-wrap mb-30">
                    <div class="product-img-action-wrap">
                      <div class="product-img product-img-zoom">
                        <% if(product.discountPercentage> 0) { %>
                          <button class="product-offer-btn btn btn-sm btn-primary position-absolute top-0 end-0"
                            style="z-index: 100;">
                            <%= product.discountPercentage %>%
                              OFF
                          </button>
                          <% } %>
                            <a href="/product/view-single-product/<%= product._id %>">
                              <img class="default-img" src="<%= product.mainImage %>" alt="">
                              <img class="hover-img" src="<%= product.images[0] %>" alt="">
                            </a>
                      </div>
                      <div class="product-action-1">
                        <a aria-label="Full View" class="action-btn hover-up"
                          href="/product/view-single-product/<%= product._id %>">
                          <i class="fi-rs-eye"></i>
                        </a>
                        <a aria-label="Add To Wishlist" class="action-btn hover-up" href="javascript:void(0);"
                          onclick="addToWishlist(this);" data-product-id="<%= product._id %>">
                          <i class="fi-rs-heart"></i>
                        </a>
                        <a aria-label="Add To Cart" onclick="addToCart(this, '<%= product.sizes[0] %>')"
                          class="action-btn hover-up addToCartButton" href="javascript:void(0);"
                          data-product-id="<%= product._id %>">
                          <i class="fi-rs-shopping-bag-add"></i>
                        </a>
                      </div>
                      <div class="product-badges product-badges-position product-badges-mrg">
                        <span class="hot">Hot</span>
                      </div>
                    </div>
                    <div class="product-content-wrap">
                      <div class="product-category">
                        <a>
                          <%= product.category.name %>
                        </a>
                      </div>
                      <h2><a href="/product/view-full-products">
                          <%= product.name.slice(0, 30) %>...
                        </a></h2>
                      <div class="product-price">
                        <span>₹<%= product.priceAfterDiscount %> </span>
                        <span class="old-price">₹<%= product.price %></span>
                      </div>
                      <div class="product-action-1 show">
                        <a aria-label="Add To Cart" onclick="addToCart(this, '<%= product.sizes[0] %>')"
