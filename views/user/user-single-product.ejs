<%- include('partials/user-header') %>
  <main class="main">
    <div class="page-header breadcrumb-wrap">
      <div class="container">
        <div class="breadcrumb">
          <a href="/home" rel="nofollow">Home</a>
          <span></span> Products
          <span></span>
          <%= product.name %>
        </div>
      </div>
    </div>
    <section class="mt-50 mb-50">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="product-detail accordion-detail">
              <div class="row mb-50">
                <div class="col-md-6 col-sm-12 col-xs-12">
                  <div class="detail-gallery">
                    <figure class="border-radius-10 mb-2">
                      <img src="<%= product.mainImage %>" alt="product image">
                    </figure>
                    <div class="slider-nav-thumbnails pl-15 pr-15">
                      <% product.images.forEach(image=> { %>
                        <div><img src="<%= image %>" alt="product image"></div>
                        <% }) %>
                    </div>
                  </div>
                </div>
                <div class="col-md-6 col-sm-12 col-xs-12">
                  <div class="detail-info">
                    <h2 class="title-detail uppercase">
                      <%= product.name %>
                    </h2>

                    <div class="product-detail-rating">
                      <div class="pro-details-brand">
                        <span> Brands: <a href="shop-grid-right.html" class="capitalize">
                            <%= product.brand.name %>
                          </a></span>
                      </div>
                      <div class="product-rate-cover text-end">
                        <span> Category: <a class="capitalize" href="shop-grid-right.html">
                            <%= product.category.name %>
                          </a></span>
                      </div>
                    </div>
                    <div class="clearfix product-price-cover">
                      <div class="product-price primary-color float-left">
                        <ins><span class="text-brand">â‚¹<%= product.price %></span></ins>
                      </div>
                    </div>
                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                    <div class="short-desc mb-30">
                      <p>
                        <%= product.description %>
                      </p>
                    </div>
                    <div class="product_sort_info font-xs mb-30">
                      <ul>
                        <li class="mb-10"><i class="fi-rs-crown mr-5"></i>Free Delivery</li>
                        <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 10 Day Return Policy</li>
                        <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                      </ul>
                    </div>
                    <div class="attr-detail attr-color mb-15">
                      <strong class="mr-10">Color</strong>
                      <ul class="list-filter color-filter">
                        <li><a href="#" data-color="<%= product.color %>"><span
                              class="product-color-<%= product.color %>"></span></a></li>
                      </ul>
                    </div>
                    <div class="attr-detail attr-size">
                      <strong class="mr-10">Size</strong>
                      <ul class="list-filter size-filter font-small">
                        <% if (product && Array.isArray(product.sizes)) { %>
                          <% product.sizes.forEach(function(size) { %>
                            <li><a href="#" onclick="changeSelectedSize('<%= size %>')">
                                <%= size %>
                              </a></li>
                            <% }); %>
                              <% } %>
                      </ul>

                    </div>
                    <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                    <div class="detail-extralink">
                      <div class="detail-qty border radius">
                        <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                        <span class="qty-val">1</span>
                        <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                      </div>
                      <div class="product-extra-link2">
                        <button type="button" data-product-id="<%= product.id %>" id="addToCartButton"
                          onclick="addToCart(this, '<%= product.sizes[0] %>')"
                          class="button button-add-to-cart addToCartButton">Add to cart</button>
                        <a aria-label="Add To Wishlist" class="action-btn hover-up" href="javascript:void(0);"
                          onclick="addToWishlist(this);" data-product-id="<%= product._id %>"><i
                            class="fi-rs-heart"></i></a>
                      </div>
                    </div>
    </section>
  </main>
  <%- include('partials/user-footer') %>
    <%- include('../partials/preloader') %>

      <script defer src="/static/cart.js"></script>
      <script defer src="/static/wishlist.js"></script>
      </body>

      </html>