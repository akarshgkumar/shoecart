<%- include('header') %>
  <%- include('aside-nav') %>
    <main class="main-wrap">
      <%- include('admin-header') %>
        <section class="content-main">
          <form  class="category-form" action="/admin/edit-category/<%= category._id %>" method="POST">
            <div class="row">
              <div class="col-9">
                <div class="content-header">
                  <h2 class="content-title">Edit New Category</h2>
                  <div>
                    <button type="submit" class="btn btn-md rounded font-sm hover-up">Edit</button>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="mb-4">
                      <label for="category_name" class="form-label">Category Name : </label>
                      <input type="text" placeholder="Type here" class="form-control" id="category_name" value="<%= category.name %>" name="category_name">
                      <span class="error-span"></span>
                    </div>
                  </div>
                </div>
              </div>
          </form>
        </section>
    </main>
    <%- include('footer') %>