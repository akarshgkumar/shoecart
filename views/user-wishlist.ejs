<%- include('user-header') %>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/home" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Wishlist
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <% if(products.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table shopping-summery text-center">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col" colspan="2">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Stock Status</th>
                                            <th scope="col">Action</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach((productItem)=> {
                                            const product = productItem.productId; %>
                                            <tr>
                                                <td class="image product-thumbnail"><img src="<%= product.mainImage %>"
                                                        alt="<%= product.name %>"></td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a
                                                            href="/product/view-single-product/<%= product._id %>">
                                                            <%= product.name %>
                                                        </a></h5>
                                                    <p class="font-xs">
                                                        <%= product.description.split(" ").slice(0, 10).join(" ") %> <%= product.description.split(" ").length > 10 ? '...' : '' %>
                                                    </p>
                                                </td>
                                                <td class=" price" data-title="Price"><span>â‚¹<%=
                                                                    product.price.toFixed(2) %>
                                                            </span>
                                                </td>
                                                <td class="text-center" data-title="Stock">
                                                    <div class="stock-container"
                                                        style="display: flex; flex-direction: column; align-items: center;">

                                                        <% if (product.stock <=0) { %>
                                                            <span class="color2 font-weight-bold"
                                                                style="color: #c51e3a;">Out of Stock</span>
                                                            <% } else { %>
                                                                <span class="color3 font-weight-bold">In Stock</span>
                                                                <span style="color: #088178; font-size: 13px;">Stock:
                                                                    <%= product.stock %></span>
                                                                <% } %>

                                                    </div>

                                                </td>
                                                <td class="text-right" data-title="Cart">
                                                    <% if (product.stock <=0) { %>
                                                        <button class="btn btn-sm"
                                                            style="background-color: #41506b; color: #fff;" disabled>Out
                                                            of Stock</button>
                                                        <% } else { %>
                                                            <button class="btn btn-sm"><i
                                                                    class="fi-rs-shopping-bag mr-5"></i>Add to
                                                                cart</button>
                                                            <% } %>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <a href="javascript:void(0);" onclick="removeFromWishlist(this)"
                                                        data-product-id="<%= product._id %>"><i
                                                            class="fi-rs-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <tr>
                                                    <td colspan="7" class="text-end">
                                                        <form action="/clear-wishlist" method="post">
                                                            <input type="hidden" id="hiddenUserId" name="userId"
                                                                value="<%= userId %>">
                                                            <button type="submit"
                                                                class="btn btn-link text-muted clear-btn-cart">
                                                                <i class="fi-rs-cross-small"></i> Clear Wishlist
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <p class="mb-20">Wishlist products are empty.</p>
                                    <a class="btn" href="/product/view-full-products"><i
                                            class="fi-rs-shopping-bag mr-10"></i>Continue
                                        Shopping</a>
                                    <% } %>
                                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i>
                                        </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('user-footer') %>

        <script defer src="/static/wishlist.js"></script>
        <%- include('footer') %>